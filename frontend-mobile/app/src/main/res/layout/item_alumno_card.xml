<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvCedulaAlumno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/c_dula_del_alumno"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/tvNombreAlumno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nombre_del_alumno"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/tvTelefonoAlumno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tel_fono_del_alumno"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/tvEmailAlumno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email_del_alumno"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/tvFechaNacimientoAlumno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="LabelFor"
            android:autofillHints=""
            android:text="@string/fecha_de_nacimiento_del_alumno"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/tvCodigoCarreraAlumno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/c_digo_de_la_carrera"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <!-- Botones con igual tamaÃ±o (50% cada uno) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnMatricular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Matricular" />

            <Button
                android:id="@+id/btnConsultarHistorial"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/consultar_historial" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
