<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="#FFFFFF"
    android:layout_margin="8dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Career -->
        <TextView
            android:id="@+id/tvCarreraMatricula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Carrera: "
            android:textSize="15sp"
            android:textColor="#212121"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"
            android:drawableStart="@android:drawable/ic_menu_agenda"
            android:drawablePadding="8dp"
            android:drawableTint="#6200EE"/>

        <!-- Cycle -->
        <TextView
            android:id="@+id/tvCicloMatricula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ciclo: "
            android:textSize="15sp"
            android:textColor="#424242"
            android:layout_marginBottom="6dp"
            android:drawableStart="@android:drawable/ic_menu_month"
            android:drawablePadding="8dp"
            android:drawableTint="#6200EE"/>

        <!-- Course -->
        <TextView
            android:id="@+id/tvCursoMatricula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Curso: "
            android:textSize="15sp"
            android:textColor="#424242"
            android:layout_marginBottom="6dp"
            android:drawableStart="@android:drawable/ic_menu_edit"
            android:drawablePadding="8dp"
            android:drawableTint="#6200EE"/>

        <!-- Group -->
        <TextView
            android:id="@+id/tvGrupoMatricula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grupo: "
            android:textSize="15sp"
            android:textColor="#424242"
            android:drawableStart="@android:drawable/ic_menu_my_calendar"
            android:drawablePadding="8dp"
            android:drawableTint="#6200EE"/>

        <!-- Group -->
        <TextView
            android:id="@+id/tvNotaMatricula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nota: "
            android:textSize="15sp"
            android:textColor="#424242"
            android:drawableStart="@android:drawable/ic_dialog_info"
            android:drawablePadding="8dp"
            android:drawableTint="#6200EE"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>