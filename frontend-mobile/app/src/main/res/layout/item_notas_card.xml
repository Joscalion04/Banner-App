<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="#FFFFFF"
    android:layout_margin="8dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Career -->
        <TextView
            android:id="@+id/tvNombreAlumno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre:"
            android:textSize="15sp"
            android:textColor="#212121"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"
            android:drawableStart="@android:drawable/ic_menu_my_calendar"
            android:drawablePadding="8dp"
            android:drawableTint="#A2261D"
            android:focusable="false"
            android:clickable="false" />

        <TextView
            android:id="@+id/tvCedulaAlumno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CÃ©dula:"
            android:textSize="15sp"
            android:textColor="#212121"
            android:layout_marginBottom="6dp"
            android:drawableStart="@android:drawable/ic_menu_edit"
            android:drawablePadding="8dp"
            android:drawableTint="#E0281A"
            android:focusable="false"
            android:clickable="false" />

        <TextView
            android:id="@+id/tvNotaAlumno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Carrera: "
            android:textSize="15sp"
            android:textColor="#212121"
            android:layout_marginBottom="6dp"
            android:drawableStart="@android:drawable/ic_dialog_info"
            android:drawablePadding="8dp"
            android:drawableTint="#E0281A"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>