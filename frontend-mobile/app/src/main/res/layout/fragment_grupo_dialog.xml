<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootDialogGrupo"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Contenedor donde reemplazaremos con GrupoFragment -->
    <FrameLayout
        android:id="@+id/containerGrupo"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Un botón flotante de cerrar, posicionado en la esquina superior derecha -->
    <ImageButton
        android:id="@+id/btnClose"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="end|top"
        android:layout_margin="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_close"
        android:contentDescription="Cerrar diálogo"
        android:visibility="visible" />

</FrameLayout>
